{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.613.9944",
      "templateHash": "16236778927182421832"
    }
  },
  "functions": [],
  "variables": {
    "location": "[resourceGroup().location]",
    "randomString": "[substring(guid(resourceGroup().id), 0, 6)]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-04-01",
      "name": "[format('pvlab-{0}-vm', variables('randomString'))]",
      "location": "[variables('location')]"
    },
    {
      "type": "Microsoft.SqlVirtualMachine/sqlVirtualMachines",
      "apiVersion": "2017-03-01-preview",
      "name": "[format('pvlab-{0}-sqlvm', variables('randomString'))]",
      "location": "[variables('location')]",
      "properties": {
        "virtualMachineResourceId": "[resourceId('Microsoft.Compute/virtualMachines', format('pvlab-{0}-sqlvm', variables('randomString')))]",
        "sqlImageOffer": "SQL2019-WS2019",
        "sqlServerLicenseType": "PAYG",
        "sqlManagement": "Full",
        "sqlImageSku": "Developer",
        "serverConfigurationsManagementSettings": {
          "sqlConnectivityUpdateSettings": {
            "connectivityType": "PRIVATE",
            "port": 1433,
            "sqlAuthUpdateUserName": "sqladmin",
            "sqlAuthUpdatePassword": "sqlPassword!"
          },
          "sqlWorkloadTypeUpdateSettings": {
            "sqlWorkloadType": "GENERAL"
          },
          "additionalFeaturesServerConfigurations": {
            "isRServicesEnabled": false
          }
        }
      }
    }
  ],
  "outputs": {
    "vmid": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', format('pvlab-{0}-vm', variables('randomString')))]"
    }
  }
}